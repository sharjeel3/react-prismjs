{
  "name": "react-prismjs",
  "version": "1.0.0",
  "description": "React syntax highlighter using Prism.js",
  "main": "lib/index.js",
  "browser": "dist/react-prismjs.js",
  "module": "esm/index.js",
  "scripts": {
    "commit": "git-cz",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint .",
    "format": "prettier-eslint --write \"**/*.js\" \"!node_modules/**\" \"!dist/**\"",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "semantic-release-dry": "semantic-release --dry-run",
    "semantic-release": "semantic-release && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versant-digital/react-prismjs.git"
  },
  "keywords": [
    "react",
    "prismjs",
    "syntax",
    "highlight"
  ],
  "files": [
    "dist",
    "lib",
    "src",
    "esm"
  ],
  "author": "Sharjeel Ahmad <sharjeel@versant.digital> (https://versant.digital)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/versant-digital/react-prismjs/issues"
  },
  "homepage": "https://github.com/versant-digital/react-prismjs#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-transform-react-jsx": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "autoprefixer": "^9.7.2",
    "babel-eslint": "^10.0.3",
    "commitizen": "^4.0.3",
    "conventional-commit-types": "^2.3.0",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rollup": "^1.27.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "semantic-release": "^15.13.31"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz.config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "prismjs": "^1.17.1",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
